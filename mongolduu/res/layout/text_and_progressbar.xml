<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/text_and_progressbar"
	android:orientation="horizontal"
	android:gravity="center"
	android:layout_width="fill_parent"
	android:layout_height="?attr/gdItemViewPreferredHeight"
	android:minHeight="?attr/gdItemViewPreferredHeight">

	<TextView android:id="@+id/text_and_progressbar_text"
		android:text="Progressbar text"
		android:onClick="onTextAndProgressBarClick"
		android:clickable="true"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:gravity="center"
		android:visibility="gone"/>

	<ProgressBar
           android:id="@+id/text_and_progressbar_progressbar"
           android:indeterminate="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           style="?android:attr/progressBarStyleSmall"
           />
</LinearLayout>
