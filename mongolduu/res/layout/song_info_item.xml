<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="?attr/gdSubtitleItemViewStyle"
	android:layout_height="wrap_content"
	android:minHeight="?attr/gdItemViewPreferredHeight"
	android:paddingLeft="?attr/gdItemViewPreferredPaddingLeft"

	android:orientation="horizontal">
	
	<ImageView
		android:id="@+id/image"
		style="?attr/gdDrawableItemViewStyleDrawable"
		android:layout_gravity="center_vertical" />

	<LinearLayout
		style="?attr/gdSubtitleItemViewStyle"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:minHeight="?attr/gdItemViewPreferredHeight"
		android:orientation="vertical">
		<TextView
			style="?attr/gdSubtitleItemViewStyleText"
			android:id="@+id/text"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_weight="0.5"
	
			android:gravity="bottom|left"
	
			android:singleLine="true"
			android:ellipsize="end" />
	
		<TextView
			style="?attr/gdSubtitleItemViewStyleSubtitle"
			android:id="@+id/subtitle"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_weight="0.5"
			
			android:gravity="top|left"
	
			android:singleLine="true"
			android:ellipsize="end" />
	</LinearLayout>

</LinearLayout>
